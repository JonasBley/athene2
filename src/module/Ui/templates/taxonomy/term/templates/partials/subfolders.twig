{% set hasSubfolders = false %}
{% set subfolderLimit = 3 %}
<div>
    {% for child in term.findChildrenByTrashed(false) %}
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <h4>
                    <a href="{{ url('taxonomy/term/get', {'term': child.getId()}) }}">{{ child.getName() }}</a>
                </h4>
                {% if child.getDescription() %}
                    {{ markdown().toHtml(child.getDescription()) }}
                {% endif %}
            </div>
            <div class="col-sm-6 col-xs-12">
                <!-- Sub folders -->
                <div class="row">
                    <div class="col-xs-2">
                        <span class="glyphicon glyphicon-lg glyphicon-chevron-right"></span>
                    </div>
                    <div class="col-xs-10">
                        <div class="row">
                            {% for childsChild in child.findChildrenByTrashed(false) %}
                                <div class="col-xs-12">
                                    <a href="{{ url('taxonomy/term/get', {'term': childsChild.getId()}) }}">{{ childsChild.getName() }}</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% set entities = child.getAssociated('entities') %}
                {% set entities = entity().getVisible(entities) %}
                {% set types = entity().asTypeCollection(entities) %}
                {% if entities.count() %}
                    {% for i in 0..2 %}
                        {% set type = cycle(['article', 'video', 'course'], i) %}
                        {% if types.get(type) %}
                            <div class="row top-buffer-10">
                                <div class="col-xs-2">
                                    <span class="glyphicon-regular glyphicon-lg glyphicon-{{ cycle(['align-left', 'play-button', 'share-alt'], i) }}"></span>
                                </div>
                                <div class="col-xs-10">
                                    <div class="row">
                                        {% for link in types.get(type) %}
                                            <div class="col-xs-12">
                                                {% include 'taxonomy/term/entity/default' with {'entity': link} only %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <hr>
    {% endfor %}
</div>