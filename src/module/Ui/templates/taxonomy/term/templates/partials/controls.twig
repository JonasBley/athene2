<div class="pull-right hidden-xs">
    <div class="btn-group">
        {% if isGranted('taxonomy.term.update', term) %}
            <a class="btn btn-default" href="{{ url('taxonomy/term/update', {'term': term.getId()}) }}">
                <span class="fa fa-pencil"></span>
            </a>
        {% endif %}
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">{{ 'Toggle Dropdown' | trans }}</span>
        </button>
        <ul class="dropdown-menu" role="menu">
            {% include 'taxonomy/term/templates/partials/actions' %}
        </ul>
    </div>

    {{ contexter().renderButton() }}
</div>